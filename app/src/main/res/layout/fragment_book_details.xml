<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/ivBookDetails"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_book_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBookDetails"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/tv_book_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_book_language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_book_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_name" />

    <TextView
        android:id="@+id/tv_book_language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_book_pages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_book_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_id" />

    <TextView
        android:id="@+id/tv_book_pages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_book_dateOfPublish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_book_language"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_language" />

    <TextView
        android:id="@+id/tv_book_dateOfPublish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_book_genreType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_book_pages"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_pages" />

    <TextView
        android:id="@+id/tv_book_genreType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_find_all_by_genre_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_book_dateOfPublish"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_dateOfPublish" />

    <TextView
        android:id="@+id/tv_find_all_by_genre_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/get_all_books_of_this_genre"
        app:layout_constraintBottom_toTopOf="@+id/tv_book_authorName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_book_genreType"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_genreType" />

    <TextView
        android:id="@+id/tv_book_authorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_find_all_books_by_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_find_all_by_genre_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_find_all_by_genre_type" />

    <TextView
        android:id="@+id/tv_find_all_books_by_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/get_all_books_of_this_author"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_book_authorName"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_authorName" />
</android.support.constraint.ConstraintLayout>